<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.android.ramadhan_1202144104_modul2.MenuUtama">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_top"
        android:id="@+id/ikon"
        android:src="@drawable/ikon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ikon"
        android:id="@+id/textpilih"
        android:text="@string/text_pilih"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_top"
        android:textSize="10pt" />
    
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textpilih"
        android:orientation="vertical"
        android:id="@+id/radio"
        android:layout_marginTop="10dp"
        android:gravity="center">

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/dinein"
                android:text="@string/radio1"/>

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/takeaway"
                android:text="@string/radio2"/>
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_top"
        android:id="@+id/pesan"
        android:text="@string/button_utama" />



</RelativeLayout>
